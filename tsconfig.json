{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@/components/*": ["components/*"],
            "@/assets/*": ["assets/*"],
            "@/api/*": ["api/*"],
            "@/redux/*": ["redux/*"]
        }
    }
}